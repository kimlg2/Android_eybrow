<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:background="@color/white"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:weightSum="2560">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="460"
        android:paddingTop="20dp"
        android:background="@color/white">

        <ImageView
            android:src="@drawable/ic_baseline_person_24"
            android:layout_width="85dp"
            android:layout_height="85dp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="250"
        android:paddingTop="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/slide_nametext1"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="290"
        android:background="@color/white">

        <Button
            android:id="@+id/btnMenuModify"
            android:text="회원정보수정"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuFavorite"
            android:text="즐겨찾기"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>



    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuBuylist"
            android:text="구매내역"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuReview"
            android:text="리뷰"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="190">

        <Button
            android:id="@+id/btnMenuQuestion"
            android:text="게시판"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"/>

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="260"
        android:background="@color/white">


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="260"
        android:background="@color/white">

        <Button
            android:id="@+id/btnLogout"
            android:text="로그아웃"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:onClick="onClick"/>

    </LinearLayout>


</LinearLayout>